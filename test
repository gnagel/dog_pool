#!/bin/sh

export GOPATH=$PWD/
export GOMAXPROCS=1

. ./configure
. ./format

echo ""
echo ".................................................................."
echo "Running tests ...................................................."
echo ".................................................................."
echo ""

go test -v ./dog_pool/... || exit $?

echo ""
echo ".................................................................."
echo "Finished tests ..................................................."
echo ".................................................................."
echo ""


echo ""
echo ".................................................................."
echo "Running benchmarks ..............................................."
echo ".................................................................."
echo ""

# Add "-v" to see all the skipped unit tests:
go test -bench=".*" -short ./dog_pool/... || exit $?

echo ""
echo ".................................................................."
echo "Finished tests ..................................................."
echo ".................................................................."
echo ""
